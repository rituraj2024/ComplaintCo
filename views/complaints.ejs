    background: #E7B10A;
    color: white;
    transition: 0.5s;
}

.complaints{
    margin-top: 20px;
    margin-left: 9%;
    text-transform: capitalize;
}

.inprogress-complaints{
    width: 115%;
    padding: 10px;
    margin-top: 10px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 20px 35px rgba(0, 0, 0, 0.1);
}

.table{
    border-collapse: collapse;
    margin: 25px 0;
    font-size: 15px;
    min-width: 100%;
    overflow: hidden;
    border-radius: 5px;
}
