<body>
    <div class="container" style="margin-left: 0; padding-left: 0">

        <nav>
          <ul>
            <li><a href="/home">
                <i class="fas fa-pen"></i>
                <span class="nav-item">COMPLAINTCO</span>
            </a></li>
            <li><a href="/home">
                <i class="fas fa-home"></i>
                <span class="nav-item">HOME</span>
            </a></li>
            <li><a href="/mycomplaints">
              <i class="fas fa-chart-bar"></i>
              <span class="nav-item">MY COMPLAINTS</span>
            </a></li>
            <li><a href="/complaints">
              <i class="fas fa-tasks"></i>
              <span class="nav-item">COMPLAINTS</span>
            </a></li>
            <li><a onclick="logout()" href="/" class="logout">
                <i class="fas fa-sign-out-alt"></i>
                <span class="nav-item">LOG OUT</span>
            </a></li>
        </ul>
        </nav>

        <section class="main">

            <div class="main-top">
              <!-- <i class="fas fa-user-cog"></i> -->
            </div>

            <div class="users">
            </div>

            <section class="complaints" style="padding-left: 0%; padding-right: 8%">
                <div class="inprogress-complaints" style="width: 125%; margin-left:1%">
                    <h1 style="text-align: center">Complaints</h1>
                    <table class="table">
                        <thead style="background-color: #E7B10A;">
                            <tr>
                                <th>Complaint id</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>No. of Upvotes</th>
                                <!-- <th>Status</th> -->
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < complaints.length; i++){ %>
                                <tr>
                                    <td id="cid"><%= complaints[i].cid %></td>
                                    <!-- <td><%= complaints[i].userid %></td> -->
                                    <td><%= complaints[i].date %></td>
                                    <td><%= complaints[i].description %> </td>
                                    <td id="upvotes-<%= i %>"><%= complaints[i].upvotes %></td>
                                    <!-- <td><%= complaints[i].status %></td> -->
                                    <td>
                                        <i id="upvote-button-<%= i %>" onclick="likeclicked('<%= i %>', '<%= complaints[i].cid %>', '<%= user %>')" style="color: #021d3f; font-size: 30px;" class="bi bi-hand-thumbs-up"></i>
                                        <!-- <i style="color: #021d3f;" class="bi bi-hand-thumbs-up-fill"></i> -->
                                        <i id="downvote-button-<%= i %>" onclick="unlikeclicked('<%= i %>', '<%= complaints[i].cid %>', '<%= user %>')" style="color: #021d3f; font-size: 30px;" class="bi bi-hand-thumbs-down"></i>
                                        <!-- <i style="color: #021d3f;" class="bi bi-hand-thumbs-down-fill"></i> -->
                                       
                                        
                                        <!-- <i class="fa-solid fa-thumbs-up"></i> -->
                                        <!-- <i class="fa-solid fa-thumbs-down"></i> -->
                                        
                                    </td>
                                    
                                    <!-- <td style="text-align:center; margin-left:2%"><a style="width: 80%" class="btn" href="/complaints/upvote/<%= complaints[i].cid %>/<%= user %>">Upvote</a> <br><br><a style="width: 80%" class="btn" style="position: relative; right: 2%; padding-left: 5px" href="/complaints/downvote/<%= complaints[i].cid %>/<%= user %> %>">Downvote</a></td> -->
                                </tr>
                        <% } %>
                        </tbody>
                    </table>
                    <div id="popup" class="popup hidden">
                        <div class="popup-content">
                            <span class="close" onclick="closePopup()">&times;</span>
                            <p style="font-weight: 600; font-size: larger; color: #021d3f;" id="popup-p"><b>Already upvoted</b></p>
                        </div>
                    </div>
                </div>
            </section>
        </section>
    </div>

    <script>
        function likeclicked(i, cid, userid){
            fetch("/complaints/upvote", {
                method: 'POST',
                headers: {
                    "Content-Type" : 'application/json'
                },
                body: JSON.stringify({cid, userid})
            })
            .then(response => response.json())
            .then(data => {
                if(data.message === "Upvoted successfully"){
                    const upvotesCell = document.getElementById(`upvotes-${i}`);
                    upvotesCell.innerText = parseInt(upvotesCell.innerText) + 1;
                    const upvoteButton = document.getElementById(`upvote-button-${i}`);
                    upvoteButton.className = "bi bi-hand-thumbs-up-fill";
                }
                else if(data.message === "Already upvoted"){
                    var popup = document.getElementById("popup");
                    popup.classList.remove("hidden");
                    popup.style.display = "block";
                    var popup_message = document.getElementById("popup-p");
                    popup_message.innerText = "Already upvoted";
                }
                console.log(data.message);
            })
            .catch(error => console.error("Error: ", error));
        }

        function unlikeclicked(i, cid, userid) {
            fetch('/complaints/downvote', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ cid, userid })
            })
            .then(response => response.json())
            .then(data => {
                if (data.message === 'Downvoted successfully') {
                    const upvotesCell = document.getElementById(`upvotes-${i}`);
                    upvotesCell.innerText = parseInt(upvotesCell.innerText) - 1;
                    const downvoteButton = document.getElementById(`downvote-button-${i}`);
                    downvoteButton.className = "bi bi-hand-thumbs-down-fill";
                }
                else if(data.message === "Not yet upvoted"){
                    var popup = document.getElementById("popup");
                    popup.classList.remove("hidden");
                    popup.style.display = "block";
                    var popup_message = document.getElementById("popup-p");
                    popup_message.innerText = "Not yet upvoted";
                }
                console.log(data.message);
            })
            .catch(error => console.error('Error:', error));
        }

        function closePopup() {
            var popup = document.getElementById("popup");
            popup.classList.add("hidden");
            popup.style.display = "none";
        }
    </script>
</body>
